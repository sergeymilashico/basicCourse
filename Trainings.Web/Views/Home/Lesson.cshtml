@model LessonViewModel

@{
    ViewData["Title"] = "Lesson";
}
<h1>@ViewData["Title"]</h1>

<div class="row">

        <div class="col-lg-12">
            <div>
                <div>
                    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
                      <ol class="breadcrumb">
                        @foreach(Lesson lesson in @Model.Lessons)
                        {
                            <li class="breadcrumb-item" aria-current="page">
                                <a asp-area="" asp-controller="Home" asp-action="Lesson" asp-route-id="@lesson.Id">Урок @lesson.Id</a>
                            </li>
                        }
                      </ol>
                    </nav>
                </div>
                <div>
                    <h5 class="card-title">Урок @Model.Current.Id</h5>
                </div>
                <div>
                <h6>@Model.Current.Name</h6>
                <p class="card-text">@Model.Current.Description</p>

                <iframe width="560" height="315" src="@Model.Current.VideoLink" 
                    title="YouTube video player" frameborder="0" 
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen>
                </iframe>
                </div>
            </div>
        </div>

</div>
