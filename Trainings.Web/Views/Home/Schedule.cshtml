@model LessonsViewModel

@{
    ViewData["Title"] = "Войти в IT. Вводный курс";
}
<h2 class="text-uppercase mb-12">@ViewData["Title"]</h2>

<div class="row">
@foreach (Lesson lesson in @Model.Lessons)
    {
        <div class="col-lg-12">
            <ul>
                <div>
                    <a asp-area="" asp-controller="Home" asp-action="Lesson" asp-route-id="@lesson.Id" class="btn btn-primary">Просмотреть урок</a>&nbsp;&nbsp;
                    Урок @lesson.Id. @lesson.Name
                </div>
            </ul>
        </div>
}
</div>

