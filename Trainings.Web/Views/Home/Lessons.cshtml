@model LessonsViewModel

@{
    ViewData["Title"] = "Список уроков";
}
<h2 class="text-uppercase mb-12">@ViewData["Title"]</h2>

<div class="row text-white">
@foreach (Lesson lesson in @Model.Lessons)
    {
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Урок @lesson.Id</h5>
                </div>
                <div class="card-body">
                <h6 class="card-title">@lesson.Name</h6>
                <p class="card-text">@lesson.Description</p>
                <a asp-area="" asp-controller="Home" asp-action="Lesson" asp-route-id="@lesson.Id" class="btn btn-primary">Просмотреть урок</a>
                </div>
            </div>
        </div>
}
</div>

